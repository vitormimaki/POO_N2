            <Cursor fx:constant="HAND" />
         </cursor>
         <image>
            <Image url="@../bin/icones/oculto.png" />
         </image>
      </ImageView>
      <Button fx:id="btn_entrar" layoutX="250.0" layoutY="310.0" mnemonicParsing="false" onAction="#autenticarLogin" text="ENTRAR">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="txt_senhavisivel" layoutX="357.0" layoutY="231.0" prefHeight="31.0" prefWidth="187.0" visible="false">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
   </children>
</AnchorPane>
